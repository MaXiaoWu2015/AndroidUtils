<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_horizontal_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xiaowu.pagerslidingstrip.HorizontalViewActivity">

    <com.example.xiaowu.pagerslidingstrip.PagerSlidingStrip
        android:id="@+id/pst_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:indicatorColor="@color/colorAccent"
        app:indicatorHeight="12dp"
        app:dividerColor="@color/colorPrimaryDark"
        />

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/pst_tab"
        android:id="@+id/vp_tab_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
